{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": "./src",
      "paths": {
        "@redly/assets": ["assets"],
        "@redly/components": ["components"],
        "@redly/graphql": ["graphql"],
      },
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx", ".prettierrc.js", "next.config.js"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  